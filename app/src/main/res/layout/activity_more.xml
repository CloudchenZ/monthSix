<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.MoreActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        >
        <ImageView
            android:src="@drawable/detail_icon_back_grey"
            android:layout_width="50dp"
            android:layout_height="50dp"
            ></ImageView>
        <ImageView
            android:layout_marginLeft="310dp"
            android:layout_width="50dp"
            android:id="@+id/more_menu"
            android:src="@drawable/nasa_nav_icon_menu_black"
            android:layout_height="50dp"
            ></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/morephoto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            ></ImageView>
        <TextView
            android:textSize="25dp"
            android:layout_gravity="center"
            android:id="@+id/moreprice"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/gwcf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/mua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></TextView>
        </RelativeLayout>

        <Button
            android:text="加入购物车"
            android:layout_marginLeft="70dp"
            android:id="@+id/entergwc"
            android:layout_width="150dp"
            android:layout_height="50dp"
            ></Button>
        <Button
            android:text="立即购买"
            android:id="@+id/checkon"
            android:layout_width="150dp"
            android:layout_height="50dp"
            ></Button>
    </LinearLayout>
</LinearLayout>